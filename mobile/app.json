{
  "expo": {
    "name": "CIRA Citizen",
    "slug": "cira-citizen",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "scheme": "cira",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cira.citizen"
    },
    "android": {
      "package": "com.cira.citizen",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow CIRA to use your location to report infrastructure issues."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CIRA to access your camera to take photos of infrastructure issues."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CIRA to access your photos to attach images to reports."
        }
      ],
      "expo-router"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8b95171d-8e1e-4677-af9f-2b88eafea6e2"
      }
    },
    "owner": "orriedan"
  }
}
